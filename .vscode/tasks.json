{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C/C++: g++ build active file",
			"type": "shell",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++17",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lpthread"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}